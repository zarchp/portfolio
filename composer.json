{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "zarchp/react-starter-kit",
  "type": "project",
  "description": "An opinionated laravel react starter kit.",
  "keywords": [
    "laravel",
    "framework"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "inertiajs/inertia-laravel": "^2.0",
    "laravel-lang/common": "^6.7",
    "laravel/framework": "^12.0",
    "laravel/sanctum": "^4.0",
    "laravel/tinker": "^2.10.1",
    "nativephp/mobile": "^1.9",
    "nunomaduro/essentials": "^0.1.0",
    "spatie/laravel-data": "^4.17",
    "spatie/laravel-sitemap": "^7.3",
    "spatie/laravel-typescript-transformer": "^2.5",
    "tightenco/ziggy": "^2.4"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "^3.15",
    "barryvdh/laravel-ide-helper": "^3.5",
    "driftingly/rector-laravel": "^2.0",
    "fakerphp/faker": "^1.23",
    "jasonmccreary/laravel-test-assertions": "^2.8",
    "larastan/larastan": "^3.5",
    "laravel-shift/blueprint": "^2.12",
    "laravel/pail": "^1.2.2",
    "laravel/pint": "^1.18",
    "laravel/sail": "^1.41",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.6",
    "peckphp/peck": "^0.1.3",
    "pestphp/pest": "^3.8",
    "pestphp/pest-plugin-laravel": "^3.2",
    "pestphp/pest-plugin-type-coverage": "^3.6",
    "rector/rector": "^2.1",
    "tightenco/duster": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
      "@php artisan native:install android --force --without-icu"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@php artisan migrate --graceful --ansi"
    ],
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "npx concurrently -c \"#93c5fd,#c4b5fd,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"npm run dev\" --names='server,queue,vite'"
    ],
    "dev:ssr": [
      "pnpm build:ssr",
      "Composer\\Config::disableProcessTimeout",
      "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"php artisan inertia:start-ssr\" --names=server,queue,logs,ssr --kill-others"
    ],
    "duster": "duster fix",
    "fix": [
      "@duster",
      "@refactor",
      "pnpm lint"
    ],
    "lint": [
      "@test:duster",
      "pnpm test:lint"
    ],
    "pint": "pint",
    "refactor": "rector",
    "test:arch": "pest --arch",
    "test:coverage": "pest --parallel --coverage --exactly=100",
    "test:duster": "duster lint",
    "test:lint": [
      "@test:duster",
      "pnpm test:lint"
    ],
    "test:refactor": "rector --dry-run",
    "test:types": "phpstan",
    "test:typos": "peck",
    "test:type-coverage": "pest --parallel --type-coverage --exactly=100",
    "test:unit": "pest --parallel --coverage --min=90",
    "test": [
      "@test:type-coverage",
      "@test:unit",
      "@test:types",
      "@test:duster",
      "@test:refactor"
    ],
    "ts": "@php artisan typescript:transform"
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://nativephp.composer.sh"
    }
  ]
}
